<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="<%= url('./stylesheets/utils.css') %>">
  <script type="text/javascript" src="<%= url('./scripts/libraries/jquery-3.2.1.min.js') %>"></script>
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <script type="text/javascript" src="<%= url('./scripts/libraries/service-workers.js') %>"></script>
  <link rel="manifest" href="<%= url('./scripts/jsons/manifest.json') %>">
  
  <title>Sinatra Sample App</title>
  
  <meta name="viewport" content="width=device-width">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="Sinatra Sample App">
  <link rel="apple-touch-icon" href="images/icons/icon-152x152.png">

  <meta name="msapplication-TileImage" content="images/icons/icon-144x144.png">
  <meta name="msapplication-TileColor" content="#2F3BA2">

</head>

<body>
  <div id="main-layout-offline">
  <div class="mdl-grid" id="mdl-grid-layout-offline">
    <div class="mdl-cell mdl-cell--middle	 mdl-cell--4-col mdl-cell--8-col-tablet"></div>
    <div class="mdl-cell mdl-cell--middle	 mdl-cell--4-col mdl-cell--8-col-tablet  mdl-cell--4-col-phone" id="layout-offline-yield-container"><%= yield %></div>
    <div class="mdl-cell mdl-cell--middle	 mdl-cell--4-col mdl-cell--8-col-tablet"></div>
  </div>
  </div>
  <div aria-live="assertive" aria-atomic="true" aria-relevant="text" class="mdl-snackbar mdl-js-snackbar" id="snackbar-offline">
    <div class="mdl-snackbar__text">
    </div>
    <button type="button" class="mdl-snackbar__action"></button>
  </div>
  <script type="text/javascript">
  $(document).ready(function(){
    var notification = document.querySelector('#snackbar-offline');
    var data = {
    message: '<%= flash[:success]  %> <%= flash[:error] %>',
    actionHandler: function(event) {},
    actionText: 'Close',
    timeout: 5000
    };
    <% if  flash[:success] or flash[:error] %>
      setTimeout(function(){   notification.MaterialSnackbar.showSnackbar(data); }, <%= @timeout %>);
    <% end %>
  });
  </script>
</body>
