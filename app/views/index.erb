<form method="POST" action="/">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text" ><i class="material-icons material-icons-io" style="margin-right:20px">flight_takeoff</i> Sign-in form </h2>
  </div>
  <div class="mdl-card__supporting-text">
    <div class="mdl-textfield mdl-js-textfield">
      <input class="mdl-textfield__input" type="text" id="usernameField" name="user[username]">
      <label class="mdl-textfield__label" for="usernameField">E-mail address</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield">
      <input class="mdl-textfield__input" type="password" id="passwordField" name="user[password]">
      <label class="mdl-textfield__label" for="passwordField">Password</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield">
      <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="rememberMeField">
        <input type="checkbox" name="user[rememberme]" id="rememberMe-checkbox" class="mdl-switch__input">
        <span class="mdl-switch__label">Remember me</span>
      </label>
    </div>
    <div class="mdl-textfield mdl-js-textfield" align="center">
      <a href="/forgotpassword">Forgot your password ?</a>
    </div>
  </div><br/>
  <div class="mdl-card__actions mdl-card--border">
    <input class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" type="submit" value="Sign-in">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" style="float:right;" href="./register">
      New ?
    </a>
  </div>
</form>
